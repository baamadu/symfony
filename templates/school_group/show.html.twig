{% extends 'base.html.twig' %}

{% block body %}
<h1 class="masthead-heading text-uppercase mb-0">
    Klassen overzicht
</h1>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>Naam</th>
        <th>Jaar</th>
        <th>SLB'er</th>
    </tr>
    </thead>
    <tbody>
        {% for group in schoolGroups %}
            <tr>
                <td>{{ group.name }}</td>
                <td>{{ group.year }}</td>
                <td>{{ group.teacher }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
