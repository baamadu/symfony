{% extends 'base.html.twig' %}

{% block title %}Hello SmartphoneController!{% endblock %}

{% block body %}

    <h1>Smartphone {{ smartphone.type }}</h1>
    {# Toont het type van de smartphone #}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Vendor</th>
            <th scope="col">Color</th>
            <th scope="col">Memory</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {# Toont de gegevens van één smartphone #}
            <th scope="row">{{ smartphone.id }}</th>
            <td>{{ smartphone.vendor.name }}</td>
            <td>{{ smartphone.color }}</td>
            <td>{{ smartphone.memory }}</td>
            <td>{{ smartphone.description }}</td>
            <td>{{ smartphone.price }}</td>
        </tr>
        </tbody>
    </table>

    {# Knop om terug te gaan naar het overzicht van smartphones #}
    <a href="{{ path('app_smartphone') }}">
        <button class="btn btn-primary">Go back</button>
    </a>

{% endblock %}
